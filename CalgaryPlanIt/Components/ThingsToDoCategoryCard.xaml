<UserControl x:Class="CalgaryPlanIt.Components.ThingsToDoCategoryCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CalgaryPlanIt.Components"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="150">
    <Grid Height="150" Width="150">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="CategoryName" TextWrapping="WrapWithOverflow" Style="{StaticResource Heading 3}"></TextBlock>
        <Button Content=">" HorizontalContentAlignment="Right" Style="{StaticResource CompletelyTransparentButton}" BorderThickness="0" Click="Button_Click"></Button>
        <Image Grid.Row="1" x:Name="CategoryImage"></Image>
    </Grid>
</UserControl>
