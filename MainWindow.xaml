<Window x:Class="CalgaryPlanIt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalgaryPlanIt"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <StackPanel Height="60" Orientation="Horizontal">
            <Image Source="/Images/CalgaryPlanItNoTextLogo.png" Width="50"/>
            <Button Name="HomeButton" Content="Home" Margin="10, 25, 10, 15" Padding="10, 0" Click="HomeButton_Click"/>
            <Button Name="ThingsToDoButton" Content="Things To Do" Margin="10, 25, 10, 15" Padding="10, 0" Click="ThingsToDoButton_Click"/>
            <Button Name="TripsButton" Content="Trips" Margin="10, 25, 10, 15" Padding="10, 0" Click="TripsButton_Click"/>
            <Button Name="ListsButton" Content="Lists" Margin="10, 25, 10, 15" Padding="10, 0" Click="ListsButton_Click"/>
        </StackPanel>
        <StackPanel Name="PageContent" Height="370"/>
    </StackPanel>
</Window>
